<Window x:Class="MasterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Master" Height="500" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Client port:" VerticalAlignment="Center"/>
            <TextBox x:Name="ClientPortText" Width="80" Margin="8,0" Text="5000"/>
            <Button x:Name="StartClientListenerBtn" Content="Start Client Listener" Click="StartClientListenerBtn_Click"/>
            <TextBlock Width="24"/>
            <TextBlock Text="Slave port:" VerticalAlignment="Center"/>
            <TextBox x:Name="SlavePortText" Width="80" Margin="8,0" Text="6000"/>
            <Button x:Name="StartSlaveListenerBtn" Content="Start Slave Listener" Click="StartSlaveListenerBtn_Click" Margin="8,0"/>
        </StackPanel>

        <GroupBox Header="Slaves" Grid.Row="1" Margin="0,0,8,0">
            <DataGrid x:Name="SlavesGrid" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Endpoint" Binding="{Binding Endpoint}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <GroupBox Header="Log / Results" Grid.Row="2" Margin="0,8,0,0">
            <StackPanel>
                <TextBox x:Name="LogBox" Height="120" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>
                <Button x:Name="ClearLogBtn" Content="Clear Log" Click="ClearLogBtn_Click" HorizontalAlignment="Right" Margin="0,6,0,0" Width="90"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
