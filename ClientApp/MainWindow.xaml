<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client - Matrix Builder" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Connection Settings -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Master IP:" VerticalAlignment="Center"/>
            <TextBox x:Name="HostText" Width="100" Margin="5,0" Text="127.0.0.1"/>
            <TextBlock Text="Port:" VerticalAlignment="Center"/>
            <TextBox x:Name="PortText" Width="60" Margin="5,0" Text="5000"/>
        </StackPanel>

        <!-- Inputs -->
        <GroupBox Header="Исходные данные" Grid.Row="1" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Files List -->
                <DockPanel Grid.Column="0" Margin="0,0,5,0">
                    <TextBlock Text="Текстовые файлы:" DockPanel.Dock="Top"/>
                    <Button x:Name="AddFilesBtn" Content="Добавить файлы..." DockPanel.Dock="Bottom" Click="AddFilesBtn_Click" Margin="0,5,0,0"/>
                    <ListBox x:Name="FilesList" Height="100"/>
                </DockPanel>

                <!-- Keywords -->
                <DockPanel Grid.Column="1" Margin="5,0,0,0">
                    <TextBlock Text="Ключевые слова (из файла):" DockPanel.Dock="Top"/>
                    <Button x:Name="LoadKeywordsBtn" Content="Загрузить ключевые слова..." DockPanel.Dock="Bottom" Click="LoadKeywordsBtn_Click" Margin="0,5,0,0"/>
                    <TextBox x:Name="KeywordsPreview" Height="100" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
                </DockPanel>
            </Grid>
        </GroupBox>

        <!-- Results Matrix -->
        <GroupBox Header="Матрица результатов (Проценты)" Grid.Row="2" Margin="0,10,0,0">
            <DataGrid x:Name="ResultGrid" IsReadOnly="True" AutoGenerateColumns="True" />
        </GroupBox>

        <!-- Footer -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <TextBlock x:Name="InfoText" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="Gray"/>
            <Button x:Name="SendBtn" Content="Отправить и построить матрицу" Click="SendBtn_Click" Padding="10,5" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>